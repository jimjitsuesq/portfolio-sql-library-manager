extends layout 

block content
  if(errors)
    h2.errors.error Oops! An error occurred!
    ul.errors.error
      each error in errors
        li= error.message
  h1= title 
  form(method='POST')
    p 
    label(for='title') Title: 
    input(type='text', name='title', id='title' value=book.title)
    p
    label(for='author') Author: 
    input(type='text', name='author', id='author' value=book.author)
    p
    label(for='genre') Genre: 
    input(type='text', name='genre', id='genre' value=book.genre)
    p
    label(for='year') Author: 
    input(type='text', name='year', id='year' value=book.year)
    p
    .pagenavcontainer
      input(type='submit' value='Update')
      form(name='deletebook', method='post' action='/books/' + book.id + '/delete', onsubmit="return confirm ('Do you really want to delete this book?')")
      input(type='submit', name='deletebook', value='Delete')
      p 
      a(class='navbutton' href='../books') Cancel