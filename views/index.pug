extends layout

block content
  h1(class='glow')= title
  p
  form(method='GET')
    label(for='search') Search:
    input(type='text', name='search', id='search')
    input(type='submit', value='Search')
  p
  table
    tr 
      th Title
      th Author 
      th Genre 
      th Year
    for book in books
      tr 
        td 
          a(href=`../../books/${book.id}`) !{book.title}
        td= book.author
        td= book.genre 
        td= book.year
  p
  p Page #{page} of #{pages}
    .pagenavcontainer
      if (page !== 1)
        a(class='navbutton' href=`../../books?page=${previousPage}`) Previous
      if (page !== pages)
        a(class='navbutton' href=`../../books?page=${nextPage}`) Next
    a(class='navbutton' href='../../books/new') Create Book