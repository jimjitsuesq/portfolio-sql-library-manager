extends layout

block content
    h1= `Search Results for "${search}"`
    p
    table
      tr 
        th Title
        th Author 
        th Genre 
        th Year
      for book in books
        tr 
          td 
            a(href=`../../books/${ book.id}`) !{ book.title}
          td=  book.author
          td=  book.genre 
          td=  book.year
    p
    if (pages > 0)
        p Page #{page} of #{pages}
    p
    if (page !== 1)
      a(class='navbutton' href=`../../books?search=${search}&page=${previousPage}`) Previous Page
    if (page !== pages && pages !==0)
      a(class='navbutton' href=`../../books?search=${search}&page=${nextPage}`) Next Page
    if (pages === 0)
      p Sorry.  No books match your search.
    p
    a(class='navbutton' href='../../books') Back